.posts-wrapper.row
  .post
    .post-head
      .name
        =@post.user.user_name
    .image.center-block
      =image_tag @post.image.url(:medium)
    %p.caption
      =@post.caption
    .text-center
      =link_to "Cancel", posts_path
      |
      =link_to "Edit", edit_post_path
      |
      =link_to "Delete", post_path(@post), method: :delete, data: {confirm: "You sure?"}